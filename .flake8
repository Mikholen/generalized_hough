[flake8]
select = ANN,B,B9,BLK,C,D,DAR,E,F,I,S,W
docstring-convention = google
ignore = E203,E501,W503,B905,I100,I201
max-line-length = 80
application-import-names = generalized_hough,tests
import-order-style = google
per-file-ignores =
    tests/*:S101,ANN
    noxfile.py:ANN
    src/generalized_hough/generalized_hough.py:ANN
